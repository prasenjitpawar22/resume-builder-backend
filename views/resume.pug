<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/react-icons@4.8.0/fa/index.esm.min.js"></script>

</head>

<body>
     <div class='bg-slate-200 h-full w-full rounded-md font-Lato'>
        <div class='flex justify-center items-center h-full p-12 bg-white'>
            <article class='relative w-full sm:text-[10px] md:text-[20px] text-slate-700'>
            #{ JSON.stringify(data.skill) }

              //contacts
              #data.contacts 
                if data.contacts && data.contacts.fullname
                    h1.text-center.text-4xl.mb-4 #{data.contacts.fullname}
                <div class='flex flex-wrap font-semibold gap-2 items-end justify-center items-center sm:gap-1  sm:text-[10px] md:text-[20px] sm:mb-4 md:mb-8 '>
                    if data.contacts && data.contacts.state 
                        // location
                        <span class='flex items-center gap text-sm md:px-2'>
                            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" color="#434343" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg" style="color: rgb(67, 67, 67);"><path fill="none" d="M0 0h24v24H0z"></path><path d="M12 2C8.13 2 5 5.13 5 9c0 1.74.5 3.37 1.41 4.84.95 1.54 2.2 2.86 3.16 4.4.47.75.81 1.45 1.17 2.26.26.55.47 1.5 1.26 1.5s1-.95 1.25-1.5c.37-.81.7-1.51 1.17-2.26.96-1.53 2.21-2.85 3.16-4.4C18.5 12.37 19 10.74 19 9c0-3.87-3.13-7-7-7zm0 9.75a2.5 2.5 0 010-5 2.5 2.5 0 010 5z"></path></svg>
                            span #{data.contacts.state}
                                if data.contacts.country 
                                    span ,#{data.contacts.country}
                        </span>
                        //email 
                        <span class='flex items-center gap text-sm md:px-2'>
                            if data.contacts.email
                                <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" color="#434343" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg" style="color: rgb(67, 67, 67);"><path fill="none" d="M0 0h24v24H0z"></path><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"></path></svg> 
                                span #{data.contacts.email}
                        </span>
                        //sm 
                        <span class='flex items-center gap text-sm md:px-2'>
                            if data.contacts.sm
                                <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" color="#434343" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg" style="color: rgb(67, 67, 67);"><path fill="none" d="M0 0h24v24H0z"></path><path d="M16 1H8C6.34 1 5 2.34 5 4v16c0 1.66 1.34 3 3 3h8c1.66 0 3-1.34 3-3V4c0-1.66-1.34-3-3-3zm-2 20h-4v-1h4v1zm3.25-3H6.75V4h10.5v14z"></path></svg>
                                span #{data.contacts.sm}
                        </span>
                        //linkedin 
                        <span class='flex items-center gap text-sm md:px-2'>
                            if data.contacts.linkedin
                                <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" color="#434343" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg" style="color: rgb(67, 67, 67);"><path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"></path></svg>
                                span #{data.contacts.linkedin}
                        </span>

                        //website 
                        <span class='flex items-center gap text-sm md:px-2'>
                            if data.contacts.website
                                <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 1024 1024" color="#434343" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg" style="color: rgb(67, 67, 67);"><path d="M811.4 418.7C765.6 297.9 648.9 212 512.2 212S258.8 297.8 213 418.6C127.3 441.1 64 519.1 64 612c0 110.5 89.5 200 199.9 200h496.2C870.5 812 960 722.5 960 612c0-92.7-63.1-170.7-148.6-193.3z"></path></svg>
                                span #{data.contacts.website}
                        </span>
                </div>

                //summary
                <section class='mb-4'>
                        <div class='text-3xl sm:text-xl md:text-3xl'>
                            <span class='uppercase text-xl font-bold w-full'>summary</span>
                            <hr class='sm:border-t-2 md:border border-slate-400' />
                                if data.summary && data.summary.summary 
                                    <p class='text-left text-sm font-semibold md:leading-6 sm:leading-3'> #{data.summary.summary} </p>
                                else 
                                    p.text-center.opacity-20.text-3xl.w-full Blank
                            </p>
                        </div>
                </section>

                //experience
                <section class=''>
                        <div class='sm:text-[10px] md:text-[20px]'>
                            <span class='uppercase text-xl font-bold w-full'>experience</span>
                            <hr class='sm:border-t-2 md:border border-slate-400' />
                            if data.experiences && data.experiences.length >0
                                each val in data.experiences 
                                    div.flex.justify-between.items-end
                                        div.flex.flex-col.text-md
                                            span.font-semibold.text-md #{val.role} 
                                            span.font-semibold.text-sm #{val.company}
                                        
                                        div.text-md
                                            span.font-semibold.text-sm
                                                if val.startYear
                                                    each v, index in val.startYear.toString().split(" ")
                                                        if index===1 || index === 3
                                                            span  #{v}
                                                if val.startYear && (val.present || val.endYear)
                                                    span #{' - '}
                                                if val.endYear
                                                    each v, index in val.endYear.toString().split(" ")
                                                        if index===1 || index === 3
                                                            span  #{v}
                                                if val.present
                                                    span Present
                                                if (val.present || val.endYear) && val.location
                                                    span #{ ', ' }
                                                if val.location
                                                    span #{val.location}

                                    div.mb-3
                                        each l, index in val.achivements.split('•')
                                            if index===0
                                            else 
                                                p.text-left.text-sm.leading-6.font-semibold • #{l}
                            else
                                p.text-center.opacity-20.text-3xl.w-full Blank
                        </div>
                </section>

                //educations
                <section class=''>
                    <div class='sm:text-[10px] md:text-[20px]'>
                        <span class='uppercase text-xl font-bold w-full'>education</span>
                        <hr class='sm:border-t-2 md:border border-slate-400' />
                        <div class='flex flex-col md:gap-2 sm:gap-1 mb-4'>
                            if data.educations && data.educations.length
                                each edu in data.educations
                                    div.flex.flex-col.text-sm.mb-2
                                        if edu.degree
                                            span.font-semibold.text-lg #{edu.degree} 
                                        div 
                                            if edu.university
                                                span.text-sm.font-semibold #{edu.university}
                                            if edu.location && edu.university
                                                span.text-sm.font-semibold #{' - '}
                                            if edu.location
                                                span.text-sm.font-semibold #{edu.location}
                                            if edu.location && edu.year
                                                span.text-sm.font-semibold #{' - '}
                                            if edu.year 
                                                each v, index in edu.year.toString().split(" ")
                                                    if index === 3
                                                        span.font-semibold  #{v}
                                            if edu.year && edu.gpa
                                                span.text-sm.font-semibold #{' - '}
                                            if edu.gpa
                                                span.text-sm.font-semibold #{edu.gpa}
                            else
                                p.text-center.opacity-20.text-3xl.w-full Blank
                        </div>
                    </div>
                </section>

                //certifications
                <section class='mt-4'>
                        <div class='sm:text-[10px] md:text-[20px]'>
                            <span class='uppercase text-xl font-bold w-full'>certifications</span>
                            <hr class='sm:border-t-2 md:border border-slate-400' />

                            <div class='flex flex-col md:gap-2 sm:gap-1 mb-4'>
                                if data.certifications && data.certifications.length 
                                    each certificate in data.certifications 
                                        div.flex.flex-col.text-sm 
                                            if certificate.name 
                                                span.font-bold.text-sm #{certificate.name}  
                                            
                                            span.text-sm.font-semibold
                                                if certificate.location 
                                                    span #{certificate.location}
                                                if certificate.location && certificate.year
                                                    span #{' • '}  
                                                if certificate.year
                                                    //- span #{certificate.year}
                                                    each d, index in certificate.year.toString().split(" ")
                                                        if index===3
                                                            span #{d}
                                            if certificate.helpful
                                                span.text-sm.font-semibold  #{certificate.helpful} 
                                else 
                                   p.text-center.opacity-20.text-3xl.w-full Blank
                            </div>
                        </div>
                </section>

                //Skills 
                <section class='mt-4'>
                        <div class='sm:text-[10px] md:text-[20px]'>
                            <span class='uppercase text-xl font-bold w-full'>skills</span>
                            <hr class='sm:border-t-2 md:border border-slate-400' />

                            <div class='flex flex-col md:gap-2 sm:gap-1 mb-4'>
                                if data.skills && data.skills.length 
                                    div.flex.flex-col
                                        each skill in data.skills
                                            span.font-semibold.text-sm #{skill.skill}
                                else 
                                    p.text-center.opacity-20.text-3xl.w-full Blank

                            </div>
                        </div>
                </section>
            </article>
        
        </div>
     </div>
</body>

</html>